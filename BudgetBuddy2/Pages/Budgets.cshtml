@page
@model BudgetBuddy2.Pages.BudgetsModel
@{
    ViewData["Title"] = "Budgets";
}

<h2>Budgets</h2>

<form method="POST">
    <ul>
        @for (int i = 0; i < Model.Budgets.Count; i++)
        {
            <li type="none"><a asp-page="./Budget" asp-route-id="@Model.Budgets[i].Id">@Model.Budgets[i].Name (@Model.Budgets[i].Id)</a></li>
        }
    </ul>
</form>
<p></p>
<button onclick="window.location.href = 'Budget/0';">New Budget</button>
